<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gb.comp3074_assignment2.DoctorMainActivity">

    <Button
        android:id="@+id/displayTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterTestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:text="Display Test"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/enterTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:text="Enter Test Information"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="162dp" />
</RelativeLayout>
