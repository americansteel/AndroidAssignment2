<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gb.comp3074_assignment2.EnterTestActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/colorAccent"
        android:gravity="center"
        android:text="Add Test Data"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/testIdEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Test ID"
        android:inputType="number" />

    <EditText
        android:id="@+id/bplEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/testIdEdit"
        android:layout_alignStart="@+id/testIdEdit"
        android:layout_below="@+id/testIdEdit"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="BPL"
        android:inputType="number" />

    <EditText
        android:id="@+id/bphEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bplEdit"
        android:layout_alignStart="@+id/bplEdit"
        android:layout_below="@+id/bplEdit"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="BPL"
        android:inputType="number" />

    <EditText
        android:id="@+id/temperatureEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bphEdit"
        android:layout_alignStart="@+id/bphEdit"
        android:layout_below="@+id/bphEdit"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Temperature"
        android:inputType="number" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bloodPressureEdit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="onClickBtn"
        android:text="Submit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView11"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Name:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="16dp"
        android:text="Patient ID:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/patientNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/patientIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView14"
        android:layout_toRightOf="@+id/textView14"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/bloodPressureEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/temperatureEdit"
        android:layout_alignStart="@+id/temperatureEdit"
        android:layout_below="@+id/temperatureEdit"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Blood Pressure"
        android:inputType="number" />
</RelativeLayout>
